{
  "name": "youtube-music-player",
  "version": "1.0.0",
  "description": "Lightweight YouTube music player for macOS",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "youtube",
    "music",
    "electron",
    "macos"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^8.1.0"
  },
  "build": {
    "appId": "com.youtube.musicplayer",
    "mac": {
      "target": "dmg",
      "category": "public.app-category.music"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}