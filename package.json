{
  "name": "amplion",
  "productName": "Amplion",
  "version": "1.0.0",
  "description": "Lightweight ADHD friendly YouTube music player",
  "main": "build/main/main.js",
  "scripts": {
    "start": "bun run build:main && bun run build:renderer && bun run build:preload && electron .",
    "dev": "bun run build:preload && bunx concurrently \"bun run dev:renderer\" \"bun run dev:main\" \"bun run dev:electron\"",
    "dev:renderer": "vite build --mode development --watch",
    "dev:main": "bunx tsc -p tsconfig.main.json --watch --preserveWatchOutput",
    "dev:electron": "bun scripts/dev-electron.mjs",
    "build:main": "bunx tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "build:preload": "bunx tsc -p tsconfig.preload.json --noEmit && bun build src/preload/index.ts --outfile=build/preload/preload.js --format=cjs --target=node --external=electron",
    "build": "bun run build:main && bun run build:renderer && bun run build:preload && electron-builder"
  },
  "keywords": [
    "youtube",
    "music",
    "electron",
    "adhd",
    "focus"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "concurrently": "^9.2.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "prettier": "3.8.1",
    "typescript": "^5.5.4",
    "vite": "^7.3.1",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "electron-localshortcut": "^3.2.1",
    "electron-store": "^8.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "build": {
    "appId": "cz.incik.amplion",
    "files": [
      "build/main/**",
      "build/preload/**",
      "renderer_dist/**",
      "settings.html",
      "settings-preload.js",
      "settings-renderer.js",
      "settings.css",
      "amplion.af",
      "images/**"
    ],
    "extraResources": [
      {
        "from": "images",
        "to": "images"
      }
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.music",
      "icon": "images/icon-mac-512x512.png"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    }
  }
}
